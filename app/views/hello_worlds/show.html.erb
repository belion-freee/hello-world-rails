<div class="container py-5">
  <div class="row">
    <div class="col-md-12">
      <div class="row">
        <!--/col-->
        <div class="col-md-8 offset-md-2">
            <!-- form user info -->
            <div class="card card-outline-secondary">
                <div class="card-header">
                    <h3 class="mb-0">Helloworld Of <%= @hello_world.country %></h3>
                </div>
                <div class="card-body">
                    <div class="form">
                        <div class="form-group row">
                            <%= content_tag :label, "Country", class: "col-lg-3 col-form-label form-control-label" %>
                            <div class="col-lg-6">
                              <%= content_tag :label, c(@hello_world), class: "form-control no-border" %>
                            </div>
                        </div>
                        <div class="form-group row">
                            <%= content_tag :label, "Hello", class: "col-lg-3 col-form-label form-control-label" %>
                            <div class="col-lg-8">
                              <%= content_tag :label, @hello_world.hello, class: "form-control no-border" %>
                            </div>
                        </div>
                        <div class="form-group row">
                            <%= content_tag :label, :priority, class: "col-lg-3 col-form-label form-control-label" %>
                            <div class="col-lg-2">
                              <%= content_tag :label, @hello_world.priority, class: "form-control no-border" %>
                            </div>
                        </div>
                        <div class="form-group row">
                          <%= content_tag :label, "Image", class: "col-lg-3 col-form-label form-control-label" %>
                          <div class="col-lg-5">
                            <% if @hello_world.image.present? %>
                            <%= image_tag(@hello_world.image.url, class: "card-img-top") %>
                            <% end %>
                          </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-lg-3 col-form-label form-control-label"></label>
                            <div class="col-lg-9">
                              <%= link_to "Home", root_path, class: "btn btn-primary" %>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /form user info -->
        </div>
      </div>
    </div>
  </div>
</div>
