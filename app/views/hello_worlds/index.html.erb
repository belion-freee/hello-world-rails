<p id="notice"><%= notice %></p>

<h1>Hello Worlds</h1>

<div class="block">
  <%= link_to 'New Hello World', new_hello_world_path, class: "add" %>
</div>

<div class="block">
  <%= paginate @hello_worlds %>
</div>

<table>
  <thead>
    <tr>
      <th>Country</th>
      <th>Hello</th>
      <th>Priority</th>
      <th colspan="3">Action</th>
    </tr>
  </thead>

  <tbody>
    <% @hello_worlds.each do |hello_world| %>
      <tr>
        <td><%= hello_world.country %></td>
        <td><%= hello_world.hello %></td>
        <td><%= hello_world.priority %></td>
        <td><%= link_to hello_world do %><%= i :show %><% end %></td>
        <td><%= link_to edit_hello_world_path(hello_world) do %><%= i :edit %><% end %></td>
        <td>
          <%= link_to "#", method: :delete, data: { url: hello_worlds_path(hello_world), confirm: 'Are you sure?' } do %>
            <%= i :delete %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="block">
  <%= paginate @hello_worlds %>
</div>
